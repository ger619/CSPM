<% if current_user.has_role? :admin or current_user.has_role?('project manager') %>
<%= form_with url: add_team_project_path(@project), method: :post, local: true do %>
  <%= label_tag :team_id, 'Select Team', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
  <div class="flex gap-2">
    <div class="">
    <%= select_tag :team_id, options_from_collection_for_select(Team.all, :id, :name),
                   class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:text-white",
                   placeholder: 'Select team' %>
  </div>
  <div class="">
    <%= submit_tag 'Add Team', class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
  </div>
  </div>
<% end %>
<% end %>