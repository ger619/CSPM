
<div class="p-4 sm:ml-64 h-[100%]">
  <%= render 'tickets/ticket_topbar' %>
  <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
    <div class="grid grid-cols-2 gap-4 mb-4 h-full">
      <div class="p-4 items-center justify-center rounded bg-gray-50 dark:bg-gray-800">
        <h1 class="text-2xl text-gray-400 dark:text-white">
          <%= @project.title %>
        </h1>
        <p class="text-sm dark:text-white capitalize"><%= @project.description %></p>
      </div>
      <div class="font-semibold p-4 items-center justify-center rounded bg-gray-50 dark:bg-gray-800">
        <h1 class="text-gray-900 dark:text-white ">Date Created</h1>
        <h1  class="text-gray-900 dark:text-white">Date to Commence</h1>
        <h1 class="text-gray-900 dark:text-white ">Expected Date of Completion</h1>
        <h1  class="text-gray-900 dark:text-white">Date to Commence</h1>

      </div>

    </div>

    <div class="flex pt-2 mb-4 rounded bg-gray-50 dark:bg-gray-800 min-h-[300px]">

          <%= render 'tickets/ticket' %>

    </div>

    <div class="flex items-center justify-center  mb-4 rounded bg-gray-50 dark:bg-gray-800 min-h-[300px] p-4">
        <%#= render 'tickets/form', project: @project %>
    </div>

  </div>
</div>
