

  <%= render 'tickets/ticket_topbar' %>

  <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
    <div class="grid grid-cols-3 gap-4 mb-4 h-full">
      <div class="p-4 items-center justify-center rounded bg-gray-50 dark:bg-gray-800 col-span-1">
        <%= render 'layouts/alert', class: "" %>

        <h1 class="text-2xl text-gray-400 dark:text-white">
          <%= @project.title %>
        </h1>
        <p class="text-sm dark:text-white capitalize"><%= @project.description %></p>
        <%= render 'project/add_assign' %>

      </div>
      <div class="font-semibold p-4 justify-between rounded bg-gray-50 dark:bg-gray-800 col-span-2 flex grid grid-cols-2">
        <div  >
        <h1 class="text-gray-900 dark:text-white ">Date Created: <span class="font-light"><%= @project.created_at.strftime("%I:%M %p at %d %B %Y") %></span></h1>
        <h1  class="text-gray-900 dark:text-white">Date to Commence: <span class="font-light"><%= @project.start_date.strftime("%d %B %Y") %></span></h1>
        <h1 class="text-gray-900 dark:text-white ">Expected Date of Completion: <span class="font-light"><%= @project.end_date %></span></h1>
        <h1  class="text-gray-900 dark:text-white">Date to Commence: </h1>
        <h1  class="text-gray-900 dark:text-white">Number of Tickets:   <span class="font-semibold"><%= @project.tickets.count %> / <%= @project.tickets.count %></span></h1>

        </div>
        <div>
          <%= render 'assign_people' %>
        </div>
      </div>

    </div>

    <div class="flex pt-2 mb-4 rounded bg-gray-50 dark:bg-gray-800 min-h-[300px]">
      <% if @project.assigned_to?(current_user) %>
        <%= render 'tickets/ticket' %>
      <% end %>

    </div>




  </div>
  <div class="flex gap-10 mt-5">

    <!-- Pagination Controls -->
    <div class="pagination">
      <% if @page > 1 %>
        <%= link_to 'Previous', project_path(@project, page: @page - 1), class: 'mb-4 h-12 w-24 border border-black dark:border-gray-900 border-b-4 border-r-2 p-3 rounded font-semibold rounded' %>
      <% end %>

      <span>Page <%= @page %> of <%= @total_pages %></span>

      <% if @page < @total_pages %>
        <%= link_to 'Next', project_path(@project, page: @page + 1), class: 'mb-4 h-12 w-24 border border-black dark:border-gray-900 border-b-4 border-r-2 p-3 rounded font-semibold rounded' %>
      <% end %>
    </div>

  </div>
