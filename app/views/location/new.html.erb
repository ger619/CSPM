<%= form_with  model: @location, url: location_index_url, method: :post, data: { turbo: false }, local: true do |f| %>
  <div class="grid grid-cols-2 gap-2">
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :name, ('City *'), class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white"  %><br />
      <%= f.text_field :city, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: '', required: true %>
    </div>
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :country, 'Country *', class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white" %><br/>
      <%= f.country_select :country, { prompt: 'Select a Country' },
                           class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
    </div>
  </div>
  <%= f.submit  class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100'   %>
<% end %>
