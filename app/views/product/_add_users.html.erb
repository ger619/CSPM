<% if current_user.has_role? :admin or current_user.has_role?('project manager') %>
  <div class="grid grid-cols-2 mt-2 gap-2">
    <div class="col-span-1 text-xs">
      <%= form_with url: add_user_product_path(@product), local: true do %>
        <%= label_tag :user_id, "SELECT USER" %>
        <div class="flex flex-wrap gap-2">
          <div>
            <%= select_tag :user_id, options_from_collection_for_select(User.with_agent_role.where.not(id: @product.users.pluck(:id)).distinct, :id, :name), class: "h-12 max-w-[120px] mr-1 form-select block rounded-md border-gray-300 text-black shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
          </div>
          <div class=" col-span-1">
            <%= submit_tag "ADD USERS", class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-span-1 text-xs">
      <% if @product.users.present? %>
        <%= form_with url: remove_user_product_path(@product), method: :delete, local: true do %>
          <%= label_tag :user_id, "REMOVE USER" %>
          <div class="flex flex-wrap gap-2">
            <div>
              <%= select_tag :user_id, options_from_collection_for_select(@product.users, :id, :name), class: "h-12 max-w-[120px] form-select block rounded-md border-gray-300 text-black shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"  %>
            </div>
            <%= submit_tag "REMOVE USER", class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

