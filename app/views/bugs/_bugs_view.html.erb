<div class="overflow-x-auto shadow-md sm:rounded-lg w-full">
  <table class="w-full text-sm text-left rtl:text-right text-gray-900 dark:text-gray-400">
    <thead class="text-xs  uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">Issue</th>
      <th scope="col" class="px-6 py-3">Priority</th>
      <th scope="col" class="px-6 py-3">Description</th>
      <th scope="col" class="px-6 py-3">VIEW</th>
      <th scope="col" class="px-6 py-3">EDIT</th>
      <th scope="col" class="px-6 py-3">DELETE</th>

    </tr>
    </thead>
    <tbody>
    <% @bugs.each do |bug| %>  <!-- Looping through each project -->
      <% if @product.added_to?(current_user) || current_user.has_role?(:admin) or current_user.has_role?(:observer) or current_user.has_role?(:agent)  %>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 h-12 text-center">
          <td class="px-6 py-4 font-medium text-left">
            <%= bug.issue %>
          </td>
          <td class="px-6 py-4 font-medium text-left">
            <%= bug.priority %>
          </td>
          <td class="px-6 py-4 text-left">
            <%= bug.content.to_plain_text.truncate(40) %>
          </td>
          <td class="px-6 py-4 text-left">
            <%= link_to "VIEW", product_bug_path(bug.product_id, bug), class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
          </td>
          <% if current_user.has_role? :admin or current_user.has_role?('project manager') %>
            <td class="px-6 py-4 text-left">
              <%= link_to 'Edit', edit_product_bug_path(bug.product_id, bug), class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
            </td>
            <td class="px-6 py-4 text-left">
              <%= button_to 'Delete', product_bug_path(bug.product_id, bug), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "border border-b-4 border-r-4 border-red-900 p-2 rounded-lg uppercase text-red-900 font-bold" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>

</div>


<script>
  document.addEventListener('turbo:load', function() {
    const button = document.getElementById('button');
    button.addEventListener('click', function() {
      button.style.backgroundColor = '#1F6DE0';
    });
  });
</script>