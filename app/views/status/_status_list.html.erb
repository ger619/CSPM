
<div class="relative overflow-x-auto shadow-md sm:rounded-lg w-[100%] ">
  <table class="w-full text-sm text-left rtl:text-right">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        Name of the Status
      </th>
      <% if can? :edit, @status %>
        <th scope="col" class="px-6 py-3">
          EDIT
        </th>
      <% end %>
      <% if can? :edit, @status %>
        <th scope="col" class="px-6 py-3">
          DELETE
        </th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% @status.each do |status| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 h-[12px]">
        <th scope="row" class="px-6 py-4 font-medium  whitespace-nowrap ">
          <%= status.name   %>
        </th>

        <% if can? :edit, status %>
          <td class="px-4 py-4">
            <%= link_to 'EDIT', edit_status_path(status), class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100'  %>
          </td>
        <% end %>
        <td class="px-4 py-4">
          <% if can? :delete, status %>
            <%= button_to 'DELETE', status, method: :delete, data: { 'turbo_method': :delete, 'turbo-confirm': 'Are you sure?' }, class: "border border-b-4 border-r-2 border-red-900 p-2 rounded-lg uppercase text-red-900 font-bold"  %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
