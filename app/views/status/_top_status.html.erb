<div class="grid grid-cols-2 ">
  <div class="grid col-span-1">
    <% if can? :create, @status %>
      <% if current_user.has_role? :admin  %>
        <div class="flex gap-1">
          <%= button_to root_path, method: :get, class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' do %>
            &#8656; Back
          <% end %>
          <%= button_to 'Add Status +', new_status_path, method: :get, class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100'  %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Search on the right -->
  <div class="grid col-span-1 justify-end">
    <div class="flex flex-col md:flex-row items-start md:items-center w-full gap-1">
      <%= form_with url: status_index_path, method: :get, class: 'flex gap-1' do |f| %>
        <%= f.text_field :query, placeholder: "Search ", class: " h-12 border border-[#3F8CFF] hover:border-[#3A81EB] border-2 rounded-lg w-full" %>
        <%= f.submit "Search", class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100'  %>
      <% end %>
      <%= form_with url: status_index_path, method: :get, class: 'flex' do |f| %>
        <%= f.submit "Clear", class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100'  %>
      <% end %>
    </div>
  </div>

</div>
