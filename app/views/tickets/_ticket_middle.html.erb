<div class="mb-4 font-bold uppercase">Type of Issue:
  <span class="font-medium">
        <%= @ticket.issue %>
      </span>
</div>
<div class="mb-2.5 font-bold uppercase">Priority:
  <span class="font-medium">
    <%= @ticket.priority %>
  </span>
</div>
<div class="mb-2.5 font-bold uppercase">
  Name of the Software:
  <span class="font-light">
    <% if @ticket.software.present? %>
    <%= @ticket.software&.name || 'No Software Assigned' %>
    <% end %>
  </span>
</div>
<div class="mb-2.5 font-bold uppercase">Software Category:
  <span class="font-light">
    <% if @ticket.software.present? %>
    <% selected_groupware = @ticket.software.groupwares.find_by(id: @ticket.groupware_id) %>
    <% if selected_groupware %>
      <%= selected_groupware.name %>
    <% else %>
      No Groupware Assigned
    <% end %>
    <% end %>
  </span>
</div>