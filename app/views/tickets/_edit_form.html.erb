<%= form_with(model: [@project, @tickets], local: true) do |f|%>
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg w-[100%]">
    <h6>EDIT TICKET</h6>
    <div class="grid grid-cols-3 gap-2 h-[100%] w-[100%]">
      <div class="relative z-0 w-[100%] mb-6 group">
        <%= f.label :issue, :issue, class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white"  %><br />
        <%= f.select :issue, options_for_select(['Support', 'New Feature', 'Bug', 'Request', 'Incident']), {}, class: "form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: 'Select The Issue' %>
      </div>
      <div class="relative z-0 w-full mb-6 group">
        <%= f.label :priority, :Priority, class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white"  %><br />
        <%= f.select :priority, options_for_select(['Severity 1', 'Severity 2', 'Severity 3', 'Severity 4']), {}, class: "form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: 'Select The Issue' %>
      </div>
      <div class="relative z-0 w-full mb-6 group">
        <%= f.label :start_date, 'Start Date', class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white"  %><br />
        <%= f.date_field :start_date, class: "form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: 'Select The Issue' %>
      </div>

      <div class="relative z-0 w-full mb-6 group">
        <%= f.label :image, 'Upload Image', class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white"  %><br />
        <%= f.file_field :image,  multiple: true, class: "form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>
    <div>
      <%= f.rich_text_area :body, class: "w-[100%] h-[400px] bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"%>
    </div>

    <%= f.submit class: "mt-2 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>


  </div>

<% end %>
