
<div class="relative overflow-x-auto shadow-md sm:rounded-lg w-[100%] ">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        Date of Issue
      </th>
      <th scope="col" class="px-6 py-3">
        Ticket Number
      </th>
      <th scope="col" class="px-6 py-3">
        Issue
      </th>
      <th scope="col" class="px-6 py-3">
        Priority
      </th>

      <th scope="col" class="px-6 py-3">
       Assigned To
      </th>
      <th scope="col" class="px-6 py-3">
        STATUS
      </th>
      <th scope="col" class="px-6 py-3">
        VIEW
      </th>
      <th scope="col" class="px-6 py-3">
        Number of Edits
      </th>
      <th scope="col" class="px-6 py-3">
        Last Edit
      </th>

      <% if can? :read, @ticket %>
      <th scope="col" class="px-6 py-3">
        EDIT
      </th>
      <% end %>
      <% if can? :delete, @ticket %>
        <th scope="col" class="px-6 py-3">
          DELETE
        </th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% @ticket.each do |ticket| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 h-[12px]">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
          <%= link_to ticket.created_at.strftime("%d %b %Y"), project_ticket_path(ticket.project, ticket)   %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
          <%= link_to ticket.issue, project_ticket_path(ticket.project, ticket)   %>
        </th>
        <td class="px-6 py-4 ">
          <% if ticket.priority == 'CRITICAL' %>
               <p class='bg-red-900 p-1 text-center text-white font-bold rounded'><%= ticket.priority %></p>
            <% elsif ticket.priority == 'HIGH' %>
               <p class='bg-red-600 p-1 text-center text-white font-bold rounded'><%= ticket.priority %></p>
            <% elsif ticket.priority == 'MEDIUM' %>
               <p class='bg-yellow-500 p-1 text-center text-white font-bold rounded'><%= ticket.priority %></p>
            <% else %>
               <p class='bg-blue-500 p-1 text-center text-white font-bold rounded'><%= ticket.priority %></p>
          <% end %>
        </td>
        <td class="px-6 py-4 truncate w-64 ">
          <%= ticket.content.to_plain_text.truncate(50) %>
        </td>

        <td class="px-6 py-4 font-bold">
          <% ticket.users.each do |user| %>
            <% if user.name.present? %>
                <%= user.name %>
            <% end %>
          <% end %>
        </td>

        <td class="px-4 py-4 ">
          <% case ticket.status %>
          <% when 'Resolved' %>
            <p class='bg-green-500 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-green-600'>
              <%= ticket.status %>
            </p>
            <% when 'Closed' %>
            <p class='bg-gray-800 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-gray-900' >
              <%= ticket.status %>
            </p>
          <% when 'Reopened' %>
            <p class="bg-red-900 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-red-800">
              <%= ticket.status %>
            </p>
            <% when 'New'  %>
            <p class="bg-red-500 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-red-600">
              <%= ticket.status %>
            </p>
          <% when  'Under Development' %>
            <p class='bg-blue-300 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-blue-400'>
              <%= ticket.status %>
            </p>
          <% when 'Work in Progress' %>
            <p class='bg-gray-500 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-gray-600'>
              <%= ticket.status %>
            </p>
          <% when 'QA Testing' %>
            <p class='bg-pink-500 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-pink-600'>
              <%= ticket.status %>
            </p>
          <% when 'Awaiting Build' %>
            <p class='text-center text-gray-900 font-bold rounded p-1 border-black border border-b-4 border-r-2'>
              <%= ticket.status %>
            </p>
          <% when 'Client Confirmation Pending' %>
            <p class='bg-purple-500 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-purple-600'>
              <%= ticket.status %>
            </p>
          <% when 'On-Hold' %>
            <p class='bg-yellow-300 text-center text-black font-bold rounded p-1 border-r-2 border-b-4 border-yellow-400'>
              <%= ticket.status %>
            </p>
          <% when 'Assigned' %>
            <p class='bg-blue-800 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-blue-900'>
              <%= ticket.status %>
            </p>
          <% when 'Declined'%>
            <p class='bg-gray-800 text-center text-slate-100 font-bold rounded p-1 border-r-2 border-b-4 border-gray-900'>
              <%= ticket.status %>
            </p>
          <% end %>
        </td>
        <td class="px-4 py-4">
          <%= link_to 'VIEW', project_ticket_path(ticket.project, ticket), class: "border border-b-4 border-r-2 border-black dark:border-slate-100 p-2 rounded-lg uppercase font-bold "  %>
        </td>
        <td class="px-4 py-4 text-center">
          <%= ticket.versions.where(event: 'update').size %>
        </td>
        <td class="px-4 py-4 text-center">
          <%= ticket.versions.last&.created_at ? ticket.versions.last.created_at.strftime("%T") : 'Never' %>
        </td>
        <% if can? :edit, ticket%>
          <td class="px-4 py-4">
            <%= link_to 'EDIT', edit_project_ticket_path(ticket.project, ticket), class: "border border-b-4 border-r-2 border-black dark:border-slate-100 p-2 rounded-lg uppercase font-bold "  %>
          </td>
        <% end %>
        <td class="px-4 py-4">
          <% if can? :destroy, ticket %>
             <%= button_to 'DELETE', [ticket.project, ticket], method: :delete, data: { 'turbo_method': :delete, 'turbo-confirm': 'Are you sure?' }, class: "border border-b-4 border-r-2 border-red-900 p-2 rounded-lg uppercase text-red-900 font-bold"  %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
