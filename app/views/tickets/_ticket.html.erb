
<div class="relative overflow-x-auto shadow-md sm:rounded-lg w-[100%] ">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        Description of the Issue
      </th>
      <th scope="col" class="px-6 py-3">
        Priority
      </th>
      <th scope="col" class="px-6 py-3">
        Description
      </th>
      <th scope="col" class="px-6 py-3">
        Start Date
      </th>
      <th scope="col" class="px-6 py-3">
        Person who raised it
      </th>
      <th scope="col" class="px-6 py-3">
        Status
      </th>
      <% if can? :edit, @ticket %>
      <th scope="col" class="px-6 py-3">
        EDIT
      </th>
      <% end %>
      <% if can? :edit, @ticket %>
        <th scope="col" class="px-6 py-3">
          DELETE
        </th>
      <% end %>
    </tr>
    </thead>
    <tbody>

    <% @ticket.each do |ticket| %>


      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 h-[12px]">

        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
          <%= link_to ticket.issue, project_ticket_path(ticket.project, ticket)   %>
        </th>
        <td class="px-6 py-4 ">
          <% if ticket.priority == 'CRITICAL' %>
               <p class='bg-red-900 p-2 text-center text-white font-bold rounded'><%= ticket.priority %></p>
            <% elsif ticket.priority == 'HIGH' %>
               <p class='bg-orange-600 p-2 text-center text-white font-bold rounded'><%= ticket.priority %></p>
            <% elsif ticket.priority == 'MEDIUM' %>
               <p class='bg-yellow-500 p-2 text-center text-white font-bold rounded'><%= ticket.priority %></p>
            <% else %>
               <p class='bg-green-500 p-2 text-center text-white font-bold rounded'><%= ticket.priority %></p>
          <% end %>
        </td>
        <td class="px-6 py-4 truncate w-64 ">
          <%= ticket.body.to_plain_text.truncate(50) %>
        </td>
        <td class="px-6 py-4">
          <%= ticket.created_at.strftime("%I:%M %p at %d %B %Y") %>
        </td>
        <td class="px-6 py-4 ">
          <%= ticket.user.name %>
        </td>

        <td class="px-4 py-4 ">
          <% if ticket.status == 'Resolved' || ticket.status == 'Closed' %>
            <p class='bg-green-500 p-2 text-center text-white font-bold rounded'>
              <%= ticket.status %>
            </p>
          <% else %>
            <p class="text-red font-bold">
              <%= ticket.status %>
            </p>
          <% end %>
        </td>
        <% if can? :edit, ticket %>
          <td class="px-4 py-4">

            <%= link_to 'EDIT', edit_project_ticket_path(ticket.project, ticket) %>

          </td>
        <% end %>
        <td class="px-4 py-4">
          <% if can? :delete, ticket %>
             <%= button_to 'DELETE', [ticket.project, ticket], method: :delete, data: { 'turbo_method': :delete, 'turbo-confirm': 'Are you sure?' }  %>
          <% end %>
        </td>

      </tr>
    <% end %>

    </tbody>
  </table>
</div>
