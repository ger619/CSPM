
<div class="relative overflow-x-auto shadow-md sm:rounded-lg w-[100%] ">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        Description of the Issue
      </th>
      <th scope="col" class="px-6 py-3">
        Priority
      </th>
      <th scope="col" class="px-6 py-3">
        Description
      </th>
      <th scope="col" class="px-6 py-3">
        Start Date
      </th>
      <th scope="col" class="px-6 py-3">
        Person who raised it
      </th>
      <th scope="col" class="px-6 py-3">
        Person who raised it
      </th>
      <th scope="col" class="px-6 py-3">
        Open/Closed
      </th>
      <th scope="col" class="px-6 py-3">
        EDIT
      </th>
    </tr>
    </thead>
    <tbody>

    <% @ticket.each do |ticket| %>


      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 h-[12px]">

        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
          <%= link_to ticket.issue, project_ticket_path(ticket.project, ticket)   %>
        </th>
        <td class="px-6 py-4">
          <%= ticket.priority %>
        </td>
        <td class="px-6 py-4 truncate w-64 ">
          <%= (ticket.body) %>
        </td>
        <td class="px-6 py-4">
          <%= ticket.created_at.strftime("%I:%M %p at %d %B %Y") %>
        </td>
        <td class="px-6 py-4 truncate w-64 ">
          <%= (ticket.body) %>
        </td>
        <td class="px-6 py-4 ">
          <%= ticket.user.name %>
        </td>
        <td class="px-4 py-4 ">
          OPEN/CLOSED
        </td>
        <td class="px-4 py-4">
          <%= link_to 'EDIT', edit_project_ticket_path(ticket.project, ticket) %>
        </td>

      </tr>
    <% end %>

    </tbody>
  </table>
</div>

