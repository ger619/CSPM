<% @boards.each do |board| %>

  <% dragAction = "dragstart->drag#dragStart
                      dragover->drag#dragOver
                      dragenter->drag#dragEnter
                      drop->drag#drop
                      dragend->drag#dragEnd" %>
  <%= content_tag(:div, class: 'bi bi-grip-horizontal draggable', draggable: true, data: {
    controller: 'drag',
    action: dragAction,
    resource_id: board.id,
    url: "/drag/board",
    parent: 'boards',
  }) do %>
    <%= render 'boards/board_display', board: board %>
  <% end %>
<% end %>