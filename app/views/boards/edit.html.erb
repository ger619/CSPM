<%= form_with(model: [@product, @board], method: :patch) do |f| %>
  <div class="gap-2 m-2">
    <%= f.label :status, :Status, class: 'pt-3' %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% unless @board.status.present? %>
      <% options = ['TO DO','In Progress', 'On-Hold', 'Failed-QA', 'QA-testing', 'Blocked', 'Await Client Information', 'Reopened', 'Awaiting Build', 'Support Testing', 'Awaiting Client API', 'Resolved', 'Closed'] %>
      <% options -= [@board.status] if @board.status.present? %>
      <%= f.select :status, options_for_select(options), {}, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: 'Select The Status' %>
    <% end %>
    <%= f.submit class: 'mt-4 w-[250px] h-12 border border-black dark:border-white border-b-4 border-r-2 p-3 rounded font-semibold rounded' %>
  </div>
<% end %>
