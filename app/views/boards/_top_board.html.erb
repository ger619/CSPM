<div class="grid grid-cols-2 ">
  <div class="grid col-span-1">
    <div class="flex gap-1">
    <%= button_to product_index_path, method: :get, class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' do %>
      &#8656; Back
    <% end %>
    <% unless current_user.has_role?(:client) %>
      <%= button_to 'Add New Status +', new_product_board_path(@product.id), method: :get, class: 'mb-4 border border-b-4 border-r-2 border-black dark:border-slate-100 p-2 rounded font-semibold rounded'  %>
    <% end %>
    </div>
  </div>
  <!-- Search on the right -->
  <div class="grid col-span-1 justify-end">
    <div class="flex flex-col md:flex-row items-start md:items-center w-full">
      <%= form_with url: product_path(@product), method: :get, class: 'flex gap-2' do |f| %>
        <%= f.text_field :query, placeholder: "Search ", class: "border border-r-4 border-b-4 rounded h-12" %>
        <%= f.submit "Search", class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
      <% end %>
      <%= form_with url: product_path(@product), method: :get, class: 'flex' do |f| %>
        <%= f.submit "Clear", class: 'ml-2 mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
      <% end %>
    </div>
  </div>
</div>