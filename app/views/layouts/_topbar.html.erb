<div class="flex justify-between items-center">
  <div>
    Goodmorning, <%= current_user.name %>
  </div>
  <div class="flex flex-col md:flex-row items-start md:items-center w-full">
    <%= form_with url: project_index_path, method: :get, class: 'flex' do |f| %>
      <%= f.text_field :query, placeholder: "Search ", class: "border-b-4 h-12 border border-black dark:border-slate-100 border-b-4 border-r-2 rounded" %>
      <%= f.submit "Search", class: "mb-4 ml-4 h-12 border border-black dark:border-slate-100 border-b-4 border-r-2 p-2 font-semibold rounded"  %>
    <% end %>
    <%= form_with url: project_index_path, method: :get, class: 'flex' do |f| %>
      <%= f.submit "Clear", class: "ml-4 mb-4 h-12 border border-black dark:border-slate-100 border border-b-4 border-r-2 p-2 font-semibold rounded"  %>
    <% end %>
  </div>

  <div class="flex items-center gap-4">
    <i class="fa fa-bell"></i> notifications
  </div>

</div>