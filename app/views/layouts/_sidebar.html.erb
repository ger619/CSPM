<div id="sidebar-wrapper" class="absolute min-h-screen overflow-y-auto transition-all duration-300 bg-white shadow-md">
  <button id="toggleSidebar" class="p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg hover:bg-gray-100 focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
    <span class="sr-only">Toggle Sidebar</span>
    <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
    </svg>
  </button>

  <!-- Set sidebar to initially be expanded (w-64) -->
  <aside id="sidebar" class="w-64 h-screen transition-all duration-300 bg-white dark:bg-gray-800">
    <ul class="space-y-2 font-medium">
      <li>
        <a href="#" class="flex items-center p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 group">
          <svg class="w-5 h-5 text-gray-500 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M5 3a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2H5zm1 2h8a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1z"></path>
          </svg>
          <span class="ms-3 whitespace-nowrap text-gray-700 dark:text-gray-300">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="#" class="flex items-center p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 group">
          <svg class="w-5 h-5 text-gray-500 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M10 2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2h-8z"></path>
          </svg>
          <span class="ms-3 whitespace-nowrap text-gray-700 dark:text-gray-300">Settings</span>
        </a>
      </li>
    </ul>
  </aside>
</div>

<script>
  document.getElementById('toggleSidebar').addEventListener('click', () => {
    const sidebar = document.getElementById('sidebar');
    const sidebarItems = document.querySelectorAll('#sidebar span');

    // Toggle between collapsed and expanded states
    if (sidebar.classList.contains('w-20')) {
      sidebar.classList.remove('w-20');
      sidebar.classList.add('w-64'); // Expand to larger width
      sidebarItems.forEach(item => {
        item.classList.remove('hidden'); // Show text
      });
    } else {
      sidebar.classList.remove('w-64');
      sidebar.classList.add('w-20'); // Collapse to smaller width
      sidebarItems.forEach(item => {
        item.classList.add('hidden'); // Hide text
      });
    }
  });
</script>

<style>
  #sidebar span.hidden {
    display: none;
  }

  /* Ensure smooth transition for width changes */
  .transition-all {
    transition: all 0.3s ease;
  }
</style>
