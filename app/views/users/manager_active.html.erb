<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Active Logged in Clients</h1>

  <% if @active_users_manager.any? %>
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">First Name</th>
          <th scope="col" class="px-6 py-3">Last Name</th>
          <th scope="col" class="px-6 py-3">Email</th>
          <th scope="col" class="px-6 py-3">Sign-In Count</th>
        </tr>
      </thead>
      <tbody>
        <% @active_users_manager.each do |user| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td class="px-6 py-4"><%= user.first_name %></td>
            <td class="px-6 py-4"><%= user.last_name %></td>
            <td class="px-6 py-4"><%= user.email %></td>
            <td class="px-6 py-4"><%= user.sign_in_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-500">No active users found.</p>
  <% end %>
</div>