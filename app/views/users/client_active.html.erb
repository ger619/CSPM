<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Active Users</h1>

  <% if @active_users_clients.any? %>
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">First Name</th>
          <th scope="col" class="px-6 py-3">Last Name</th>
          <th scope="col" class="px-6 py-3">Email</th>
          <th scope="col" class="px-6 py-3">Sign-In Count</th>
        </tr>
      </thead>
      <tbody>
        <% @active_users_clients.each do |user| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td class="px-6 py-4"><%= user.first_name %></td>
            <td class="px-6 py-4"><%= user.last_name %></td>
            <td class="px-6 py-4"><%= user.email %></td>
            <td class="px-6 py-4"><%= user.sign_in_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Pagination Controls -->
    <div class="mt-4 flex justify-between items-center">
      <% if @current_page > 1 %>
        <%= link_to "Previous", active_users_path(page: @current_page - 1), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
      <% else %>
        <span class="px-4 py-2 bg-gray-300 text-gray-700 rounded">Previous</span>
      <% end %>

      <span>Page <%= @current_page %> of <%= @total_pages %></span>

      <% if @current_page < @total_pages %>
        <%= link_to "Next", active_users_path(page: @current_page + 1), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
      <% else %>
        <span class="px-4 py-2 bg-gray-300 text-gray-700 rounded">Next</span>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No active users found.</p>
  <% end %>
</div>