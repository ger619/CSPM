<div class="grid grid-cols-2 ">
  <div class="grid col-span-1">
    <%= link_to 'Add New Issue +', new_project_ticket_issue_path(@project.id, @ticket.id), class: 'mb-4 w-2/5 h-12 border border-b-4 border-r-2 p-3 rounded font-semibold rounded'  %>

  </div>
  <!-- Search on the right -->
  <div class="grid col-span-1 justify-end">


    <div class="flex flex-col md:flex-row items-start md:items-center w-full">
      <%= form_with url: project_ticket_path(@project, @ticket), method: :get, class: 'flex' do |f| %>
        <%= f.text_field :query, placeholder: "Search ", class: "h-12 border border-b-4 border-r-2 p-2 rounded" %>
        <%= f.submit "Search", class: "mb-4 ml-4 h-12 border border-b-4 border-r-2 p-2 rounded font-semibold rounded"  %>
      <% end %>

      <%= form_with url: project_ticket_path(@project, @ticket), method: :get, class: 'flex' do |f| %>
        <%= f.submit "Clear", class: "ml-4 mb-4 h-12 border border-b-4 border-r-2 p-2 rounded font-semibold rounded"  %>
      <% end %>

    </div>
  </div>
</div>