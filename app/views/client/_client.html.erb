
<div class="relative overflow-x-auto shadow-md sm:rounded-lg w-[100%] ">
  <table class="w-full text-sm text-left rtl:text-right">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        Name of the Client
      </th>
      <th scope="col" class="px-6 py-3">
        Email Address
      </th>

      <th scope="col" class="px-6 py-3">
        Phone Number
      </th>
      <th scope="col" class="px-6 py-3">
        Address
      </th>
      <th scope="col" class="px-6 py-3">
        Name of The Contact Person
      </th>
      <th scope="col" class="px-6 py-3">
        Client Phone Number
      </th>
      <th scope="col" class="px-6 py-3">
        Client Contact Person Email
      </th>
      <% if can? :edit, @client %>
        <th scope="col" class="px-6 py-3">
          EDIT
        </th>
      <% end %>
      <% if can? :edit, @client %>
        <th scope="col" class="px-6 py-3">
          DELETE
        </th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% @client.each do |client| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 h-[12px]">
        <th scope="row" class="px-6 py-4 font-medium  whitespace-nowrap ">
          <%= client.name   %>
        </th>

        <td class="px-6 py-4 truncate w-64">
          <%= client.email %>
        </td>

        <td class="px-6 py-4 truncate w-64">
          <%= client.phone %>
        </td>
        <td class="px-6 py-4 truncate w-64">
          <%= client.address %>
        </td>
        <td class="px-6 py-4 truncate w-64">
          <%= client.client_contact_person %>
        </td>
        <td class="px-6 py-4 truncate w-64">
          <%= client.client_contact_phone_number %>
        </td>
        <td class="px-6 py-4 truncate w-64">
          <%= client.client_contact_person_email %>
        </td>
        <% if can? :edit, client %>
          <td class="px-4 py-4">
            <%= link_to 'EDIT', edit_client_path(client),  class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100'   %>
          </td>
        <% end %>
        <td class="px-4 py-4">
          <% if can? :delete, client %>
            <%= button_to 'DELETE', client, method: :delete, data: { 'turbo_method': :delete, 'turbo-confirm': 'Are you sure?' }, class: "border border-b-4 border-r-2 border-red-900 p-2 rounded-lg uppercase text-red-900 font-bold"  %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<div class="pagination mt-5">
  <% if @page > 1 %>
    <%= link_to 'Previous', client_index_path(page: @page - 1), class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
  <% end %>
  <span>Page <%= @page %> of <%= @total_pages %></span>
  <% if @page < @total_pages %>
    <%= link_to 'Next', client_index_path(page: @page + 1), class: 'mb-4 h-12 bg-[#3F8CFF] hover:bg-[#3A81EB] p-3 rounded font-bold rounded-lg text-slate-100' %>
  <% end %>
</div>
