<%= form_with  model: @client, url: client_path(@client), method: :patch do |f| %>
  <div class="grid grid-cols-2 gap-2">
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :name, :Name, class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white"  %><br />
      <%= f.text_field :name, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: '', required: true %>
    </div>
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :email, :Email, class: "capitalize block mb-1 text-sm font-medium"  %><br />
      <%= f.text_field :email, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: '', required: true %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-2">
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :phone, :Phone, class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white"  %><br />
      <%= f.number_field :phone, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: '', required: true %>
    </div>
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :address, :Address, class: "capitalize block mb-1 text-sm font-medium"  %><br />
      <%= f.text_field :address, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: '', required: true %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-2">
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :client_contact_person, ('Client Contact Person'), class: "capitalize block mb-1 text-sm font-medium text-gray-900 dark:text-white"  %><br />
      <%= f.text_field :client_contact_person, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: '', required: true %>
    </div>
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :client_contact_phone_number, ('Client Contact Person Phone Number'), class: "capitalize block mb-1 text-sm font-medium"  %><br />
      <%= f.number_field :client_contact_phone_number, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: '', required: true %>
    </div>
    <div class="relative z-0 w-full mb-6 group">
      <%= f.label :client_contact_person_email, ('Client Contact Person Email'), class: "capitalize block mb-1 text-sm font-medium"  %><br />
      <%= f.text_field :client_contact_person_email, class: "border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: '', required: true %>
    </div>
  </div>
  <%= f.submit  class: 'mb-4 h-12 border border-black dark:border-white border-b-4 border-r-2 p-3 rounded font-semibold rounded'  %>
<% end %>
